<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/videoUtilityButtons"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/videobuttons_size"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/utilityButtons1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="left">

        <com.zihuatanejo.finalcamera.ui.RotateImageView
            android:id="@+id/buttonTimeLapse"
            android:layout_width="@dimen/videobuttons_size"
            android:layout_height="@dimen/videobuttons_size"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:onClick="onButtonClick"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plugin_capture_video_timelapse_inactive"></com.zihuatanejo.finalcamera.ui.RotateImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/utilityButtons2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="right">

        <com.zihuatanejo.finalcamera.ui.RotateImageView
            android:id="@+id/buttonCaptureImage"
            android:layout_width="@dimen/videobuttons_size"
            android:layout_height="@dimen/videobuttons_size"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:onClick="onButtonClick"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plugin_capture_video_takeimage"></com.zihuatanejo.finalcamera.ui.RotateImageView>
    </LinearLayout>
</LinearLayout>