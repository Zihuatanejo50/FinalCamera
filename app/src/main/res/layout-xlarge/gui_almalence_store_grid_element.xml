<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/storeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/store_element">

    <RelativeLayout
        android:id="@+id/storeLayout2"
        android:layout_width="@dimen/gridModeImageSize2x"
        android:layout_height="@dimen/gridStoreImageSize2x"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/storeImage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/gridStoreImageSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="5dp"></ImageView>

        <RelativeLayout
            android:id="@+id/textStoreLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/storeImage"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/storeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"></TextView>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/storePriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="15dip"
        android:textColor="#57a25c"
        android:textSize="15sp"></TextView>

    <ImageView
        android:id="@+id/storeSaleImage"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:paddingLeft="60dip"
        android:src="@drawable/store_sale"
        android:visibility="gone"></ImageView>

</RelativeLayout>